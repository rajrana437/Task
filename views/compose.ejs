
<%- include("partials/header"); -%>
    <h1>Compose</h1>
    <form class="" action="/compose" method="post">
      <div class="form-group">
        <label>Author Name (optional)</label>
        <input class="form-control" type="text" name="authorname" placeholder="Anonymous">
        <label>Query</label>
        <input class="form-control" type="text" name="postTitle">
        <label>Answer</label>
        <textarea class="form-control" name="postBody" rows="5" cols="30"></textarea>
      </div>
      <button class="btn btn-info" type="submit" name="button">Publish</button>
    </form>

<%- include("partials/footer"); -%>
